# Test Environment Configuration
NODE_ENV=test
PORT=4010
LOG_LEVEL=error
CORS_ORIGIN=*

# JWT Configuration
JWT_SECRET=test-secret-key-that-is-at-least-32-characters-long
JWT_EXPIRES_IN=1d

# Test Database URLs (use in-memory or mock)
MONGODB_URI=mongodb://localhost:27017/test_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=test_db
POSTGRES_USER=test
POSTGRES_PASSWORD=test
REDIS_HOST=localhost
REDIS_PORT=6379

# Disable database connections for E2E tests
SKIP_DB_CONNECTION=true